#!/bin/sh

# Generated by GitPodify

# Template: pre-commit-lint
echo "🧹 Running Linter..."

# Check if eslint (or the linting tool) is installed
if ! npm list --depth=0 | grep eslint &> /dev/null; then
  echo "❌ eslint not found! Please ensure eslint is installed and try again."
  # exit 1
fi

# Run linting command (adjust for your project)
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Linting failed. Please fix errors before committing."
#   exit 1
fi

echo "✅ Linting passed."


# Template: pre-commit-format
echo "🧹 Running Code Formatter..."

# Check if Prettier is installed
if ! command -v prettier &> /dev/null; then
  echo "❌ Prettier not found! Please install it (e.g., 'npm install prettier --save-dev')."
  # exit 1
fi

# Format code (adjust the file patterns as needed)
npx prettier --write "**/*.{js,jsx,ts,tsx,css,scss,md}"
if [ $? -ne 0 ]; then
  echo "❌ Formatting failed. Please check for errors."
  # exit 1
fi

echo "✅ Code formatted successfully."


