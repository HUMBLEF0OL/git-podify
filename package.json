{
  "name": "git-podify",
  "version": "1.0.0",
  "description": "CLI utility that generates boilerplate Git hooks and configurations to streamline project-specific workflows. Easily add predefined hooks, linting, unit tests, and commit message checks to automate Git processes and improve development productivity.",
  "main": "index.js",
  "bin": {
    "hookpilot": "./bin/hookpilot.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup:git-hooks": "git config core.hooksPath .git-hooks",
    "postinstall": "npm run setup:git-hooks"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HUMBLEF0OL/git-podify.git"
  },
  "author": "HUMBLEF0OL",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HUMBLEF0OL/git-podify/issues"
  },
  "homepage": "https://github.com/HUMBLEF0OL/git-podify#readme",
  "keywords": [
    "CLI",
    "Git hooks",
    "boilerplate",
    "Git",
    "automation",
    "workflow"
  ],
  "dependencies": {
    "commander": "^12.1.0",
    "enquirer": "^2.4.1",
    "mock-fs": "^5.4.1"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "contributors": [
    "HUMBLEF0OL"
  ],
  "files": [
    "bin/",
    "lib/",
    "README.md"
  ],
  "private": false,
  "publishConfig": {
    "access": "public"
  }
}