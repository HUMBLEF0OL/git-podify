#!/bin/sh

echo "üßê Auditing Pushed Changes..."

# Example: Check for any changes in the `src` directory
if git diff --cached --name-only | grep -q "^src/"; then
  echo "‚úÖ Changes detected in 'src' directory."
else
  echo "‚ö†Ô∏è No changes detected in 'src' directory."
fi

# Example: Ensure commit message follows a certain pattern (e.g., Conventional Commits)
commit_msg=$(git log --format=%B -n 1)

if ! echo "$commit_msg" | grep -qE "^(feat|fix|docs|style|refactor|test|chore): "; then
  echo "‚ùå Commit message does not follow Conventional Commits format."
  exit 1
fi

echo "‚úÖ Pushed changes are valid."
