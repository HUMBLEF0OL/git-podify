#!/bin/sh

echo "üöÄ Triggering CI/CD Pipeline..."

# Ensure the GITHUB_REPO and GITHUB_TOKEN environment variables are set
if [ -z "$GITHUB_REPO" ]; then
  echo "‚ùå GITHUB_REPO is not set. Please set the environment variable and try again."
  exit 1
fi

if [ -z "$GITHUB_TOKEN" ]; then
  echo "‚ùå GITHUB_TOKEN is not set. Please set the environment variable and try again."
  exit 1
fi

# Trigger GitHub Actions workflow (main.yml)
response=$(curl -X POST \
  -H "Accept: application/vnd.github.v3+json" \
  -H "Authorization: token $GITHUB_TOKEN" \
  "https://api.github.com/repos/$GITHUB_REPO/actions/workflows/main.yml/dispatches" \
  -d '{"ref":"main"}')

# Check if the API request was successful
if [ $? -ne 0 ]; then
  echo "‚ùå CI/CD pipeline trigger failed. Please check the error message above."
  exit 1
fi

# Parse the response to check for successful execution
if echo "$response" | grep -q "\"message\": \"GitHub Actions is disabled\""; then
  echo "‚ùå GitHub Actions is disabled for the repository. Please enable it in the settings."
  exit 1
fi

# Check if the response indicates success
if echo "$response" | grep -q "\"status\": \"success\""; then
  echo "‚úÖ CI/CD pipeline triggered successfully."
else
  echo "‚ùå Failed to trigger the CI/CD pipeline. Response from GitHub: $response"
  exit 1
fi
