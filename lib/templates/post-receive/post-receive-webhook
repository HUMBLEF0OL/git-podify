#!/bin/sh

echo "üîó Triggering external webhook..."

# Check if WEBHOOK_URL is set
if [ -n "$WEBHOOK_URL" ]; then
  response=$(curl -X POST -H "Content-Type: application/json" --data '{"status": "push"}' "$WEBHOOK_URL")

  if [ $? -ne 0 ]; then
    echo "‚ùå Failed to trigger external webhook."
    exit 1
  fi

  echo "‚úÖ Webhook triggered successfully."
else
  echo "‚ö†Ô∏è WEBHOOK_URL not set. Skipping webhook trigger."
fi
